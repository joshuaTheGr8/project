<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@

    <link href="~/Content/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/theme/animate.min.css" rel="stylesheet">
    <link href="~/Content/theme/style.min.css" rel="stylesheet">
    <link href="~/Content/theme/style-responsive.min.css" rel="stylesheet">
    <link href="~/Content/theme/theme/default.css" rel="stylesheet">
</head>
<body>

    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin #header -->
        @Html.Partial("_Header")
        <!-- end #header -->
        @RenderBody()

        <!-- begin #footer -->
        <div id="footer" class="footer">
            <div class="container">
                <div class="footer-brand">
                    <img src="~/assets/img/logo.png" class="" width="100" height="100" />
                    Migration
                </div>
                <p>
                    &copy; Copyright Migration <br />
                </p>
                <p class="social-list">
                    <a href="#"><i class="fa fa-facebook fa-fw"></i></a>
                    <a href="#"><i class="fa fa-instagram fa-fw"></i></a>
                    <a href="#"><i class="fa fa-twitter fa-fw"></i></a>
                    <a href="#"><i class="fa fa-google-plus fa-fw"></i></a>
                    <a href="#"><i class="fa fa-dribbble fa-fw"></i></a>
                </p>
            </div>
        </div>
        <!-- end #footer -->       
    </div>
    <!-- end #page-container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Content/plugins/pace/pace.min.js"></script>
    <script src="~/Content/plugins/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Content/plugins/jquery/jquery-migrate-1.1.0.min.js"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Content/plugins/jquery-cookie/jquery.cookie.js"></script>
    <script src="~/Content/plugins/scrollMonitor/scrollMonitor.js"></script>
    <script src="~/Content/js/apps.min.js"></script>
    <!-- ================== END BASE JS ================== -->

    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
